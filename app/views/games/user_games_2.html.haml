.row
  .col-md-12
    = render partial:"/common/games_list_with_heading", locals: {games: @created_games, heading: 'Созданные мной индивидуальные игры', actions: {edit: true, show: true, delete: true}}
.row
  .col-md-12
    = render partial:"/common/games_list_with_heading", locals: {games: @created_team_games, heading: 'Созданные мной командные игры', actions: {edit: true, show: true, delete: true}}
.row
  .col-md-12
    %table.table.table-hover
      %h1 Участник игр
      %thead
        %tr
          %th Название
          %th Создатель
          %th Вид игры
          %th Площадка
          %th Время
          %th Команда
          %th Команда
      %tbody
        - @participated_games.each do |game|
          - if game.individual
            %tr
              %td= game.name
              %td= game.host.name
              %td= game.type.name
              %td= game.playground.name
              %td= game.game_date_time
              %td
                - game.players.each do |player|
                  %p= player.name
              %td= link_to  'Просмотр', game_path(game), class:'btn btn-primary'
          - else
            %td= game.name
            %td= game.host.name
            %td= game.type.name
            %td= game.playground.name
            %td= game.game_date_time
            %td= game.first_team.name
            %td= game.second_team.name
            %td= link_to  'Просмотр', game_path(game), class:'btn btn-primary'
